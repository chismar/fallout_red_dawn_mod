<Defs>

  <ThingDef ParentName="BuildingBase">
    <thingClass>VFE.Mechanoids.Buildings.Building_BedMachine</thingClass>
    <defName>FRS_Mechanoids_MenderBase</defName>
    <label>red mender charging station</label>
    <description>A station for assembling and recharging menders.</description>
    <graphicData>
      <texPath>Things/Pawn/Mechanoid/MenderChargingStation</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.5,0.3,0.7)</volume>
        <offset>(0,0,-0.15)</offset>
      </shadowData>
      <damageData>
        <rect>(0.234375,0,0.515625,0.984375)</rect>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>FloorEmplacement</altitudeLayer>
    <passability>Standable</passability>
    <blockWind>false</blockWind>
    <rotatable>false</rotatable>
    <fillPercent>0.1</fillPercent>
    <thingCategories>
      <li>BuildingsProduction</li>
    </thingCategories>
    <statBases>
      <WorkToBuild>1000</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>6</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <tickerType>Rare</tickerType>
    <building>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
      <bed_humanlike>false</bed_humanlike>
      <bed_showSleeperBody>True</bed_showSleeperBody>
      <sowTag>SupportPlantsOnly</sowTag>
      <canPlaceOverImpassablePlant>false</canPlaceOverImpassablePlant>
      <ai_chillDestination>false</ai_chillDestination>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <costList>
      <Steel>45</Steel>
      <Plasteel>30</Plasteel>
      <Uranium>100</Uranium>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>1500</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="VFE.Mechanoids.CompProperties_MachineChargingStation">
        <pawnToSpawn>FRS_Mechanoids_Mender</pawnToSpawn>
        <allowedWorkTypes>
          <li>Doctor</li>
        </allowedWorkTypes>
        <extraChargingPower>1600</extraChargingPower>
        <hoursToRecharge>12</hoursToRecharge>
      </li>
    </comps>
    <designationCategory>VFE_Factory</designationCategory>
    <researchPrerequisites>
      <li>FRS_PR_MinitaturizedAtomicEngines</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
  </ThingDef>
