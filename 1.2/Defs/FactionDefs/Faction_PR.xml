<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <FactionDef ParentName="FactionBase">
    <defName>FRS_PR</defName>
    <label>People's Republic</label>
    <categoryTag>FRS_PR</categoryTag>
    <description>An advanced society that's based around socialist ideals, utilizing AI for automation of executive government and industrial tasks, with vanguard party as it's ruling body.</description>
    <pawnSingular>socialist</pawnSingular>
    <pawnsPlural>socialists</pawnsPlural>
    <listOrderPriority>101</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxCountAtGameStart>1</maxCountAtGameStart>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>chairman</leaderTitle>
    <royalFavorLabel>prestige</royalFavorLabel>
    <royalFavorIconPath>UI/Icons/RoyalFavor</royalFavorIconPath>
    <leaderForceGenerateNewPawn>true</leaderForceGenerateNewPawn>
    <factionNameMaker>NamerFactionPR</factionNameMaker>
    <settlementNameMaker>NamerSettlementPR</settlementNameMaker>
    <pawnNameMaker>NamerPersonPR</pawnNameMaker>
    <pawnNameMakerFemale>NamerPersonPRFemale</pawnNameMakerFemale>
    <factionIconPath>FRS/World/WorldObjects/Expanding/PR</factionIconPath>
    <permanentEnemyToEveryoneExcept>
      <li>OutlanderCivil</li>
      <li>TribeCivil</li>
      <li>PlayerTribe</li>
      <li>PlayerColony</li>
      <li>Ancients</li>
      <li>AutonomousPeoplesRepublic</li>
    </permanentEnemyToEveryoneExcept>
    <techLevel>Ultra</techLevel>
    <backstoryFilters>
      <li>
        <categories>
          <li>ImperialCommon</li>
        </categories>
      </li>
    </backstoryFilters>
    <geneticVariance>0.8</geneticVariance>
    <apparelStuffFilter>
      <stuffCategoriesToAllow>
        <li>Metallic</li>
        <li>Fabric</li>
      </stuffCategoriesToAllow>
      <disallowedThingDefs>
        <li>DevilstrandCloth</li>
        <li>Hyperweave</li>
      </disallowedThingDefs>
    </apparelStuffFilter>
    <hairTags>
      <li>Urban</li>
      <li>Rural</li>
    </hairTags>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
    <colorSpectrum>
      <li>(1, 1, 0.2)</li>
    </colorSpectrum>
    <fixedLeaderKinds>
      <li>FRS_PR_Chairman</li>
    </fixedLeaderKinds>
    <royalTitleTags>
      <li>PartyRank</li>
    </royalTitleTags>
    <baseTraderKinds>
      <li>FRS_PR_Base_Standard</li>
    </baseTraderKinds>
    <caravanTraderKinds>
      <li>FRS_PR_Caravan_TraderGeneral</li>
    </caravanTraderKinds>
    <royalTitleInheritanceWorkerClass>RoyalTitleInheritanceWorker</royalTitleInheritanceWorkerClass>
    <royalTitleInheritanceRelations>
    </royalTitleInheritanceRelations>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 1)</li> <!--Constant 1 at all points levels-->
      </points>
    </raidCommonalityFromPointsCurve>
    <raidLootMaker>EmpireRaidLootMaker</raidLootMaker>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(500, 100)</li> <!-- Can always use relatively strong pawns, because empire doesn't really have weak ones -->
        <li>(1000, 150)</li>
        <li>(2000, 250)</li>
        <li>(2001, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <!-- Traders - TODO -->
      <li Class="RedScare.PawnGroupMakerPR">
        <kindDef>Trader</kindDef>
        <traders>
          <FRS_PR_Common_Trader>1</FRS_PR_Common_Trader>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>1</Elephant>
        </carriers>
        <guards>
          <Villager>3</Villager>
          <FRS_PR_RedArmyConscriptSummer>2</FRS_PR_RedArmyConscriptSummer>
          <FRS_PR_RedArmyConscriptWinter>2</FRS_PR_RedArmyConscriptWinter>
          <FRS_PR_RedArmyConscriptSummerWithMask>2</FRS_PR_RedArmyConscriptSummerWithMask>
          <FRS_PR_RedArmyConscriptWinterWithMask>2</FRS_PR_RedArmyConscriptWinterWithMask>
          <FRS_PR_RedArmyMilitant>5</FRS_PR_RedArmyMilitant>
          <FRS_PR_RedArmyOfficer>1</FRS_PR_RedArmyOfficer>
        </guards>
      </li>
      <li Class="RedScare.PawnGroupMakerPR">
        <!-- Normal fights -->
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <FRS_PR_RedArmyConscriptSummer>2</FRS_PR_RedArmyConscriptSummer>
          <FRS_PR_RedArmyConscriptWinter>2</FRS_PR_RedArmyConscriptWinter>
          <FRS_PR_RedArmyConscriptSummerWithMask>2</FRS_PR_RedArmyConscriptSummerWithMask>
          <FRS_PR_RedArmyConscriptWinterWithMask>2</FRS_PR_RedArmyConscriptWinterWithMask>
          <FRS_PR_RedArmyMilitant>5</FRS_PR_RedArmyMilitant>
          <FRS_PR_RedArmyOfficer>1</FRS_PR_RedArmyOfficer>
        </options>
      </li>
      <li Class="RedScare.PawnGroupMakerPR">
        <!-- Base defense, mainly ranged with melee mix-ins -->
        <kindDef>Settlement</kindDef>
        <options>
          <FRS_PR_RedArmyConscriptSummer>2</FRS_PR_RedArmyConscriptSummer>
          <FRS_PR_RedArmyConscriptWinter>2</FRS_PR_RedArmyConscriptWinter>
          <FRS_PR_RedArmyConscriptSummerWithMask>2</FRS_PR_RedArmyConscriptSummerWithMask>
          <FRS_PR_RedArmyConscriptWinterWithMask>2</FRS_PR_RedArmyConscriptWinterWithMask>
          <FRS_PR_RedArmyMilitant>5</FRS_PR_RedArmyMilitant>
          <FRS_PR_RedArmyOfficer>1</FRS_PR_RedArmyOfficer>
      </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>

  <ThingSetMakerDef>
    <defName>EmpireRaidLootMaker</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
            <li>Gold</li>
            <li>MedicineUltratech</li>
            <li>Uranium</li>
            <li>MealSurvivalPack</li>
          </thingDefs>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>
  
  <!-- =============================== Names =============================== -->

  <RulePackDef>
    <defName>NamerFactionPR</defName>
    <include>
      <li>EmpireNameUtility</li>
    </include>
    <rulePack>
      <rulesStrings>

        <li>r_name->People's Republic of [townname_wordgen]</li>

        <li>townname_wordgen->[WordImperial][townend]</li>
        <li>townend(p=3)->ium</li>
        <li>townend(p=3)->ior</li>
        <li>townend(p=3)->polis</li>
        <li>townend->nor</li>
        <li>townend->lan</li>
        <li>townend->lax</li>
        <li>townend->lix</li>
        <li>townend->lin</li>
        <li>townend->lian</li>
        <li>townend->phrum</li>
        <li>townend->phor</li>
        <li>townend->teor</li>
        <li>townend->ople</li>
        <li>townend->opium</li>
        <li>townend->or</li>
        <li>townend->aetor</li>
        <li>townend->aeum</li>
        <li>townend->aetium</li>
        <li>townend->am</li>
        <li>townend->aeum</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerSettlementPR</defName>
    <include>
      <li>EmpireNameUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_name->[townname_wordgen]</li>
        <li>r_name->[townname_fixed]</li>

        <li>townname_wordgen->[WordImperial]</li>
        <li>townname_wordgen->[WordImperial][townend]</li>
        <li>townend(p=3)->ium</li>
        <li>townend(p=3)->ior</li>
        <li>townend(p=3)->polis</li>
        <li>townend->nor</li>
        <li>townend->lan</li>
        <li>townend->lax</li>
        <li>townend->lix</li>
        <li>townend->lin</li>
        <li>townend->lian</li>
        <li>townend->phrum</li>
        <li>townend->phor</li>
        <li>townend->teor</li>
        <li>townend->ople</li>
        <li>townend->opium</li>
        <li>townend->or</li>
        <li>townend->aetor</li>
        <li>townend->aeum</li>
        <li>townend->aetium</li>
        <li>townend->am</li>
        <li>townend->aeum</li>
      </rulesStrings>
      <rulesFiles>
        <li>townname_fixed->Names/EmpireTown</li>
      </rulesFiles>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerPersonPR</defName>
    <include>
      <li>EmpireNameUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_name(p=3)->[ImperialNameFirstMale] [ImperialNameLast]</li>
        <li>r_name(p=2)->[ImperialNameFirstMale] [WordImperial]</li>
        <li>r_name(p=2)->[WordImperial] [WordImperial]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

  <RulePackDef>
    <defName>NamerPersonPRFemale</defName>
    <include>
      <li>EmpireNameUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_name(p=3)->[ImperialNameFirstFemale] [ImperialNameLast]</li>
        <li>r_name(p=2)->[ImperialNameFirstFemale] [WordImperial]</li>
        <li>r_name(p=2)->[WordImperial] [WordImperial]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>

</Defs>